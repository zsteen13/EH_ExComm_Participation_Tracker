<div id="main">
<div class="header">
  <h1> <%= @subcommittee.subcommittee %> Members</h1>
</div>

<div class="content" style="text-align:center;">
    <div class="pure-button-group" role="group" aria-label="...">
        <p>
        <%= link_to "Return to Subcommittees", committee_subcommittees_path(@subcommittee.committee), class: "pure-button pure-button-primary"%>
        </p>
    </div>   
    <div id="list" class="pure-u-1">
    <table class="pure-table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Total Points</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.total_points %></td>
        </tr>
        <% end %>
    </table>
    </div>
</div>
</div>

<style>
a{
text-decoration: none;
color: #1b98f8;
}
.header a{
color: white;
}
th{
background:#500000;
padding:8px;
}
.table{
border:2px solid black;
}
#table{
border-collapse: collapse;
width:100%;
}
.table td a{
background-color: #0078E7;
color: white;
padding:.3em;
border-radius:10px;
text-decoration: none;
text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
}

.content {
max-width: 90%;
}
.pure-button {
color: white;
border-radius: 4px;
text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
}

</style>