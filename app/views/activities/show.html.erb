<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/pure-min.css" integrity="sha384-cg6SkqEOCV1NbJoCu11+bm0NvBRc8IYLRGXkmNrqUBfTjmMYwNKPWBTIKyw9mHNJ" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/grids-responsive-min.css">
<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<div id="main">
    <div class="header">
        <h1>Attendance</h1>
    </div>

    <div class="l-content">
        <p>
            <a class="pure-button pure-button-primary" href="/activities/"> Return to Activities </a>
        </p>
        <div class="profile-boxes pure-g">
            <div class="pure-u-1">
                <div class="profile-box">
                <table class="pure-table-horizontal" style="width:100%;background-color:white;">
                        <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>UIN</th>
                        </tr>
                        </thead>
                        <tbody class="text-style" style="font-size:30px;color:black;">
                            <% @members_attended.each do |members_attended|%>
                            <tr>
                                <td><%= User.find_by(uin: members_attended.uin).try(:first_name) %></td>
                                <td><%= User.find_by(uin: members_attended.uin).try(:last_name) %></td>
                                <td><%= User.find_by(uin: members_attended.uin).try(:uin) %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>
<style>
    .profile-box{
        background:white;
        border:none;
    }
    .pure-table {
        border: 2px solid #a7a7a7;
    }
    .pure-button {
        color: white;
        border-radius: 4px;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        font-size:1.2vw;
        left:0;
    }
    .pure-table-horizontal th{
        background:#500000;
        border-right: 2px solid #a7a7a7;
    }
    .pure-table td{
        background:#f6f6f6;
    }
</style>
