<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/pure-min.css" integrity="sha384-cg6SkqEOCV1NbJoCu11+bm0NvBRc8IYLRGXkmNrqUBfTjmMYwNKPWBTIKyw9mHNJ" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/grids-responsive-min.css">
<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<div id="main">
    <div class="header">
        <h1>Activities</h1>
        <h2><%= @activity.name %> Attendence</h2>
    </div>
    <br>
    <div style="text-align: center;" >
      <a class="pure-button pure-button-primary" href="/activities/"> Return to Activities </a>
    </div>
    <div class="l-content" >
        <div class="profile-boxes pure-g">
            <div class="pure-u-1">
                <div class="profile-box">
                <table class="pure-table" style="width:100%;background-color:white;">
                        <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>UIN</th>
                            <th>Email</th>
                        </tr>
                        </thead>
                            <% @members_attended.each do |member_attended|%>
                            <tr>
                                <% member = User.find_by(uin: member_attended.uin) %>
                                <td><%= member.try(:first_name) %></td>
                                <td><%= member.try(:last_name) %></td>
                                <td><%= member.try(:uin).blank? ? 'non-student' : member.uin %></td>
                                <td><%= member.try(:email) %></td>
                            </tr>
                            <% end %>
                        
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>
<style>
    .profile-box{
        background:white;
        border:none;
        margin:2em 0;
    }
    .pure-table {
        border: 2px solid #a7a7a7;
    }
    .pure-button {
        color: white;
        border-radius: 4px;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        left:0;
    }
    .pure-table th{
        background:#500000;
        border-right: 2px solid #a7a7a7;
    }
    .pure-table td{
        background:#f6f6f6;
        font-size:20px;color:black;
    }
@media 
only screen and (max-width: 760px)  {

  /* Force table to not be like tables anymore */
  table, thead, tbody, th, td, tr { 
    display: block; 
  }
  
  /* Hide table headers (but not display: none;, for accessibility) */
  thead tr { 
    position: absolute;
    top: -9999px;
    left: -9999px;
  }

  tr { border: 2px solid #ccc;border-bottom:none;}

  .pure-table{
    border:none;
    border-bottom:2px solid #ccc;
  }

  
  .pure-table td { 
    /* Behave  like a "row" */
    border: none;
    border-bottom: 1px solid #eee; 
    position: relative;
    padding-left: 50%;
    overflow-wrap: auto; 
  }
  
  .pure-table td:before { 
    /* Now like a table header */
    position: absolute;
    /* Top/left values mimic padding */
    top: 10px;
    left: 6px;
    width: 45%; 
    white-space: nowrap;
    color:#500000;
    font-weight: bold;
    margin-right:10px;
  }
  
  /*
  Label the data
  */
  td:nth-of-type(1):before { content: "First Name"; }
  td:nth-of-type(2):before { content: "Last Name"; }
  td:nth-of-type(3):before { content: "UIN"; }
  .head{
    display: none;
  }
}
</style>
