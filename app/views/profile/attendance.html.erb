<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/pure-min.css" integrity="sha384-cg6SkqEOCV1NbJoCu11+bm0NvBRc8IYLRGXkmNrqUBfTjmMYwNKPWBTIKyw9mHNJ" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/grids-responsive-min.css">
<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<div id="main">
    <div class="header">
        <h1>Activities Attended</h1>
    </div>

    <div class="l-content">
        <div class="profile-boxes pure-g">
            <div class="pure-u-1">
                <div class="profile-box">
                <table class="pure-table center" style="width:100%;background-color:white;">
                        <thead>
                        <tr>
                            <th>Event Name</th>
                            <th>Date</th>
                            <th>Points</th>
                        </tr>
                        </thead>
                        <tbody class="text-style" style="font-size:30px;color:black;">
                        <% @attended.each do |attended| %>
                            <tr>
                                <td><%= Activity.find(attended.activity_id).name %></td>
                                <td><%= Activity.find(attended.activity_id).date[0,10]%></td>
                                <td><%= Activity.find(attended.activity_id).point_value%></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>