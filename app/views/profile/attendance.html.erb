<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/pure-min.css" integrity="sha384-cg6SkqEOCV1NbJoCu11+bm0NvBRc8IYLRGXkmNrqUBfTjmMYwNKPWBTIKyw9mHNJ" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/grids-responsive-min.css">
<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<div id="main">
    <div class="header">
        <h1>Activities Attended</h1>
    </div>
    <a class="pure-button pure-button-primary" href="/profile/" > Return to Profile </a>
    <div class="l-content">
        <div class="profile-boxes pure-g">
            <div class="pure-u-1">
                <div class="profile-box">
                <table class="pure-table" style="width:100%;background-color:white;">
                        <thead>
                        <tr class="head">
                            <th>Event Name</th>
                            <th>Event Type</th>
                            <th>Date</th>
                            <th>Points</th>
                        </tr>
                        </thead>
                            <!--
                            <tr>
                                <td>Club Meeting</td>
                                <td>October 18, 2020</td>
                                <td>15</td>
                            </tr>
                            -->
                            
                        <% @attended.each do |attended| %>
                            <tr>
                                <td><%= Activity.find(attended.activity_id).name %></td>
                                <td><%= Activity.find(attended.activity_id)._type %></td>
                                <td><%= Activity.find(attended.activity_id).date[0,10]%></td>
                                <td><%= Activity.find(attended.activity_id).point_value%></td>
                            </tr>
                            <% end %>
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>
<style>
    .profile-box{
        background:white;
        border:none;
    }
    .pure-table {
        border: 2px solid #a7a7a7;
    }
    .pure-button {
        color: white;
        border-radius: 4px;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        left:0;
    }
    .pure-table th{
        background:#500000;
        border-right: 2px solid #a7a7a7;
    }
    .pure-table td{
        background:#f6f6f6;
        color:black;
        font-size:20px;
    }
@media 
only screen and (max-width: 760px)  {

  /* Force table to not be like tables anymore */
  table, thead, tbody, th, td, tr { 
    display: block; 
  }
  
  /* Hide table headers (but not display: none;, for accessibility) */
  thead tr { 
    position: absolute;
    top: -9999px;
    left: -9999px;
  }

  tr { border: 2px solid #ccc;border-bottom:none;}

  .pure-table{
    border:none;
    border-bottom:2px solid #ccc;
  }

  
  .pure-table td { 
    /* Behave  like a "row" */
    border: none;
    border-bottom: 1px solid #eee; 
    position: relative;
    padding-left: 50%;
    overflow-wrap: auto; 
  }
  
  .pure-table td:before { 
    /* Now like a table header */
    position: absolute;
    /* Top/left values mimic padding */
    top: 10px;
    left: 6px;
    width: 45%; 
    white-space: nowrap;
    color:#500000;
    font-weight: bold;
    margin-right:10px;
  }
  
  /*
  Label the data
  */
  td:nth-of-type(1):before { content: "Event Name"; }
  td:nth-of-type(2):before { content: "Event Type"; }
  td:nth-of-type(3):before { content: "Date"; }
  td:nth-of-type(4):before { content: "Points"; }
  .head{
    display: none;
  }
}
</style>

