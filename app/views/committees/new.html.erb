<div id="main">
    <div class="header">
      <h1>Committees</h1>
    </div>

    <% flash.each do |type, msg| %>
        <div style="color: red">
            <%= msg %>
          </div>
          <%flash.alert = ""%>
    <% end %>

    <a class="pure-button pure-button-primary" href="/committees/" > Return to Committees </a>
    <div class="content" style="background:#500000;padding:0;width:60%;border:2px solid black">
        <div class="content" style="background:white;padding:0 2em;margin:20px;border:1px solid black">
            <h1 style="text-align: center;color:#500000">Add Committee</h1>
            <%= form_for(@committee_new, :url => committees_path, :method =>'post') do |f| %>
                <p>
                <%= f.label "Committee Name", style: 'text-transform: capitalize; font-weight:bold;'%>
                <br>
                <%= f.text_field :committee , placeholder: "Committee Name", :required => true,style: 'text-transform: capitalize;'%>
                </p> 
                <p>   
                <%= f.label "Point Threshold", style: 'text-transform: capitalize;font-weight:bold;'%>
                <br>
                <%= f.text_field :point_threshold, placeholder: "Point Threshold" %>
                </p> 
                <p> 
                <%= f.label "Committee Head Name", style: 'text-transform: capitalize;font-weight:bold;'%>
                <br>
                <%= f.text_field :head_first_name , placeholder: "First Name", :required => true, style: 'text-transform: capitalize;'%>
                <%= f.text_field :head_last_name , placeholder: "Last Name", :required => true, style: 'text-transform: capitalize;'%>
                </p> 
                <p> 
                <%= f.label "Committee Head Email", style: 'text-transform: capitalize;font-weight:bold;'%>
                <br>
                <%= f.text_field :email, placeholder: "Committee Head Email", :required => true%>
                </p>
                <p>
                <%= f.submit 'Add Committee', :class => 'pure-button pure-button-primary' %>
                </p>
            <% end %>
        
        </div>
    </div>
</div>

<style>
    .content{
        box-shadow: 0px 0px 38px -1px rgba(0,0,0,0.3);
        border-radius: 20px;
    }
</style>