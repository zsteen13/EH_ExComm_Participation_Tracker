<div class>
  <div id="main">
    <div class="header">
      <h1>Members</h1>
    </div>
    <div style="text-align: center;" >
      <a class="btn pure-button pure-button-primary" href="/members/"> Back to Members Page </a>
    </div>
    <div class="pure-g" style="margin-right: 2em;">
      <div class="pure-u-1">
        <div class="profile-card">
          <h1>Bulk Add Users</h1>
          <div class="text">
            <p>
              Attach CSV file with new users.
              <br>
              <br>
              This CSV file should be in the following format to ensure no parsing errors occur.
              <br>
              <br>
              UIN | First Name | Last Name | Email | Committee | Subcommittee | Point Total | Meeting Point | Event Points | Misc Points | Admin
              <br>
              <br>
              All fields after email are optional.
            </p>
          </div>
          <%= form_with(url: {action: :create}, multipart: true) do %>
            <div class="horz">
              <label class="custom-file-upload">
                <input class="file" type="file" name="new_users" id="new_users">
                <a class="btn pure-button pure-button-primary" >Select File</a>
              </label>
              <p id="file_name" style="margin:5px"></p>
              <%= submit_tag "Upload", :class => "btn pure-button pure-button-primary", :id => "upload_btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="center">
      <a class="pure-button pure-button-primary" href="/bulk_add_users/help">Click Here for Help</a>
    </div>
  </div>
  <script>
    var file_input = document.getElementById('new_users')
    var file_name = document.getElementById('file_name')
    file_input.addEventListener('input', function (evt){
    var list = this.value.split('\\')
    file_name.innerText = list[list.length - 1]
    })
  </script>
