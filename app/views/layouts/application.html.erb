  <body>
  <div id="layout">
    <% if logged_in? %>
      <a href="#menu" id="menuLink" class="menu-link">
          <!-- Hamburger icon -->
          <span></span>
      </a>

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="#">EH</a>

              <ul class="pure-menu-list">
                  <li class="pure-menu-item"><a href="#" class="pure-menu-link">Home</a></li>
                  <li class="pure-menu-item"><a href="#" class="pure-menu-link">Profile</a></li>
                  <li class="pure-menu-item menu-item-divided pure-menu-selected"><a href="#" class="pure-menu-link">Activities</a></li>
                  <li class="pure-menu-item"><a href="#" class="pure-menu-link">Contact</a></li>
              </ul>
          </div>
      </div>
      <script src="../../javascript/ui.js"></script>
    <%end%>

    <%= yield %>
    
  </div>
  </body>
</html>
