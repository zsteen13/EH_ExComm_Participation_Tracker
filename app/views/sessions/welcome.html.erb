<% if !logged_in? %>

    <div id="main">
        <div class="header">
            <h1>Welcome to the EH Excom Member Point Tracker</h1>
            <h2>Please log in below...</h2>
        </div>

        <div class="content" style="text-align:center;">
            <br>
            <%= form_tag '/login', :id => 'login' do %>
                <%= label_tag :first_name%>
                <%= text_field_tag :first_name %>
                <br>
                <%= label_tag :last_name %>
                <%= text_field_tag :last_name %>
                <br>
                <%= label_tag "UIN" %>
                <%= text_field_tag :uin %>
                <br>
                <%= submit_tag "Login", :class => "pure-button" %>
            <% end %>
        </div>
    </div>

