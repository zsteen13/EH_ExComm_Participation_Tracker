<div id="main">
    <h1>Login</h1>
    <%= form_tag '/login' do %>
        <%= label_tag :first_name%>
        <%= text_field_tag :first_name %>
        <%= label_tag :last_name %>
        <%= text_field_tag :last_name %>
        <%= label_tag "UIN" %>
        <%= text_field_tag :uin %>
        <%= submit_tag "Login", :class => "pure-button" %>
    <% end %>
</div>