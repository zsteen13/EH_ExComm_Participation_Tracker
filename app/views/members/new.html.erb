<div id="main">
  <div class="header">
      <h1>Members</h1>
  </div>
  <%= link_to("<< Back to Member page", members_path, :class => 'back-link') %>
    <div class="content" style="background:#500000;padding:0;width:60%;border:2px solid black">
        <div class="content" style="background:white;padding:0 2em;margin:20px;border:1px solid black">
            <h1 style="text-align: center;color:#500000">Create a Member</h1>
            <br>
            <%= form_for(@member, :url => members_path, :method =>'post') do |f| %>
              <table id="formTable" summary="Subject form fields">
                  <tr>
                      <th>First Name</th>
                      <td><%= f.text_field :first_name , style: 'text-transform: capitalize;'%></td>
                  </tr>
        
                  <tr>
                      <th>Last Name</th>
                      <td><%= f.text_field :last_name, style: 'text-transform: capitalize;' %></td>
                  </tr>

                  <tr>
                      <th>UIN</th>
                      <td><%= f.text_field :uin %></td>
                  </tr>
                
                  <tr>
                      <th>Email</th>
                      <td><%= f.text_field :email %></td>
                  </tr>
                
                  <tr>
                    <th>Committee</th>
                    <% committee_options = options_from_collection_for_select(@committees, 'id', 'committee') %>
                    <td><%= f.select :committee, committee_options %></td>
                  </tr>

                  <tr>
                    <th>Subcommittee</th>
                    <% subcommittee_options = options_from_collection_for_select(@subcommittees, 'id', 'subcommittee') %>
                    <td><%= f.select :subcommittee, subcommittee_options %></td>
                  </tr>
                
                  <tr>
                      <th>Total Points</th>
                      <!--This should be a dropdown in the future-->
                      <td><%= f.text_field :total_points %></td>
                  </tr>

                  <tr>
                      <th>Admin</th>
                      <td><%= f.check_box :admin %></td>
                  </tr>

              </table>

              <%= f.submit 'Create New Member', :class => 'pure-button pure-button-primary' %>
              <% end %>
      
          </div>
      </div>
</div>
<style>
  a{
    text-decoration: none;
    color: #1b98f8;
  }
  .header a{
    color: white;
  }
  th{

    background:none;
    color:#777;
    height:20%;
  }
  .table{
    border:2px solid black;
  }
  .table td a{
    background-color: #0078E7;
    color: white;
    padding:.3em;
    border-radius:10px;
    text-decoration: none;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  }
  .content {

    margin: 0 auto;
    padding: 0 2em;
    max-width: 70%;
    margin-bottom: 50px;
    line-height: 1.6em;
    max-width: 90%;
    box-shadow: 0px 0px 38px -1px rgba(0,0,0,0.3);
    border-radius: 20px;
  }
  .pure-button {
    color: white;
    border-radius: 4px;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
    margin-bottom: 10px;
  }

  
  input{
    font-family: inherit;
    font-size: 100%;
    margin: 0;
    padding: .5em .6em;
    display: inline-block;
    border: 1px solid #ccc;
    -webkit-box-shadow: inset 0 1px 3px #ddd;
    box-shadow: inset 0 1px 3px #ddd;
    border-radius: 4px;
    vertical-align: middle;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    line-height: .5em;

  }
  button{
    cursor:pointer;

  }
  #formTable{
    width:70%;
    justify-content: center;

  }
