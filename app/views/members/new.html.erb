<div id="main">
  <div class="header">
      <h1>Member</h1>
      <h2>Here all memebers in EH member point Tracker</h2>
  </div>
  <%= link_to("<< Back to List", members_path, :class => 'back-link') %>
    <div class="new member">
      <h2>Create members</h2>

      <%= form_for(@member, :url => members_path, :method =>'post') do |f| %>
        <table summary="Subject form fields">
            <tr>
                <th>First Name</th>
                <td><%= f.text_field(:first_name) %></td>
            </tr>

            <tr>
                <th>Last Name</th>
                <td><%= f.text_field(:last_name) %></td>
            </tr>

            <tr>
                <th>Email</th>
                <td><%= f.text_field(:email) %></td>
            </tr>

            <tr>
                <th>Committee</th>
                <td><%= f.text_field(:committee) %></td>
            </tr>

            <tr>
                <th>Subcommittee</th>
                <td><%= f.text_field(:subcommittee) %></td>
            </tr>

            <tr>
                <th>Toatal Points</th>
                <td><%= f.text_field(:total_points) %></td>
            </tr>

            <tr>
                <th>Subcommittee</th>
                <td><%= f.text_field(:subcommittee) %></td>
            </tr>

            <tr>
                <th>Admin</th>
                <td><%= f.text_field(:admin) %></td>
            </tr>

        </table>
        <div class="form-buttons">
            <%= f.submit("Create New Member") %>
         </div>
        <% end %>
      </div>
</div>
