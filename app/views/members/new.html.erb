<div id="main">
  <div class="header">
    <h1>Members</h1>
  </div>
  <%= link_to("<< Back to Member page", members_path, :class => 'back-link') %>
  <div class="content" style="background:#500000;padding:0;width:60%;border:2px solid black">
    <div class="content" style="background:white;padding:0 2em;margin:20px;border:1px solid black">
      <h1 style="text-align: center;color:#500000">Create a Member</h1>
      <%= form_for(@member, :url => members_path, :method =>'post', params[:id] =>@member.id) do |f| %>
      <table id="formTable" summary="Subject form fields">
        <tr>
          <th>First Name</th>
          <td><%= f.text_field :first_name , style: 'text-transform: capitalize;'%></td>
        </tr>

        <tr>
          <th>Last Name</th>
          <td><%= f.text_field :last_name, style: 'text-transform: capitalize;' %></td>
        </tr>

        <tr>
          <th>UIN</th>
          <td><%= f.text_field :uin %></td>
        </tr>

        <tr>
          <th>Email</th>
          <td><%= f.text_field :email %></td>
        </tr>

        <tr>
          <th>Committee</th>
          <% committee_options = options_from_collection_for_select(Committee.all, 'id', 'committee') %>
          <td><%= f.select :committee, committee_options, :include_blank => "None" %></td>
        </tr>

        <tr>
          <th>Subcommittee</th>
          <td><%= f.select :subcommittee, [], :include_blank => "None" %></td>
        </tr>

        <tr>
          <th>Total Points</th>
          <td><%= f.number_field(:total_points, in: 0...1000) %></td>
        </tr>

        <tr>
          <th>Admin</th>
          <td><%= f.check_box :admin %></td>
        </tr>

      </table>

      <%= f.submit 'Create New Member', :class => 'pure-button pure-button-primary' %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(function () {

    if ($("select#user_committee").val() == "") {
      $("select#user_subcommittee option").remove();
      var row = "<option value=\"" + "" + "\">" + "None" + "</option>";
      $(row).appendTo("select#user_subcommittee");
    }
    $("select#user_committee").change(function () {
      var id_value_string = $(this).val();
      if (id_value_string == "") {
        $("select#user_subcommittee option").remove();
        var row = "<option value=\"" + "" + "\">" + "None" + "</option>";
        $(row).appendTo("select#user_subcommittee");
      } else {
        // Send the request and update course dropdown
        $.ajax({
          dataType: "json",
          cache: false,
          url: '/subcommittees_by_committee/' + id_value_string,
          timeout: 5000,
          error: function (XMLHttpRequest, errorTextStatus, error) {
            alert("Failed to submit : " + errorTextStatus + " ;" + error);
          },
          success: function (data) {
            // Clear all options from course select
            $("select#user_subcommittee option").remove();
            //put in a empty default line
            var row = "<option value=\"" + "" + "\">" + "None" + "</option>";
            $(row).appendTo("select#user_subcommittee");
            // Fill course select
            $.each(data, function (i, j) {
              row = "<option value=\"" + j.id + "\">" + j.subcommittee + "</option>";
              $(row).appendTo("select#user_subcommittee");
            });
          }
        });
      }
    });
  });
</script>

