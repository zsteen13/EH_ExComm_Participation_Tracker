<div id="main">
  <div class="header">
      <h1>Members</h1>
  </div>
  <%= link_to("<< Back to Member page", members_path, :class => 'back-link') %>
    <div class="new member content">
      <h1>Create a Member</h1>
      <br>
      <%= form_for(@member, :url => members_path, :method =>'post') do |f| %>
        <table id="formTable" summary="Subject form fields">
            <tr>
                <th>First Name</th>
                <td><%= f.text_field :first_name , style: 'text-transform: capitalize;'%></td>
            </tr>
  
            <tr>
                <th>Last Name</th>
                <td><%= f.text_field :last_name, style: 'text-transform: capitalize;' %></td>
            </tr>

            <tr>
                <th>UIN</th>
                <td><%= f.text_field :uin %></td>
            </tr>
          
            <tr>
                <th>Email</th>
                <td><%= f.text_field :email %></td>
            </tr>
          
            <tr>
                <!--This should be a dropdown in the future-->
                <th>Committee</th>
                <td><%= f.text_field :committee %></td>
            </tr>
          
            <tr>
                <!--This should be a dropdown in the future-->
                <th>Subcommittee</th>
                <td><%= f.text_field :subcommittee %></td>
            </tr>
          
            <tr>
                <th>Total Points</th>
                <!--This should be a dropdown in the future-->
                <td><%= f.text_field :total_points %></td>
            </tr>

            <tr>
                <th>Admin</th>
                <td><%= f.check_box :admin %></td>
            </tr>

        </table>

          

            <%= f.submit 'Create New Member', :class => 'pure-button pure-button-primary' %>
            <% end %>
      
</div>
<style>
  a{
    text-decoration: none;
    color: #1b98f8;
  }
  .header a{
    color: white;
  }
  th{

    background:none;
    color:#777;
    height:20%;
  }
  .table{
    border:2px solid black;
  }
  .table td a{
    background-color: #0078E7;
    color: white;
    padding:.3em;
    border-radius:10px;
    text-decoration: none;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  }
  .content {

    margin: 0 auto;
    padding: 0 2em;
    max-width: 70%;
    margin-bottom: 50px;
    line-height: 1.6em;

    max-width: 90%;

  }
  .pure-button {
    color: white;
    border-radius: 4px;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  }

  
  input{
    font-family: inherit;
    font-size: 100%;
    margin: 0;
    padding: .5em .6em;
    display: inline-block;
    border: 1px solid #ccc;
    -webkit-box-shadow: inset 0 1px 3px #ddd;
    box-shadow: inset 0 1px 3px #ddd;
    border-radius: 4px;
    vertical-align: middle;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    line-height: .5em;

  }
  button{
    cursor:pointer;

  }
  #formTable{
    width:70%;
    justify-content: center;

  }
  .input[type="submit" i] {
    appearance: push-button;
    user-select: none;
    white-space: pre;
    align-items: flex-start;
    text-align: center;
    cursor: default;
    color: -internal-light-dark(buttontext, rgb(170, 170, 170));
    background-color: #0078E7;
    box-sizing: border-box;
    padding: 1px 6px;
    border-width: 2px;
    border-style: outset;
    border-color: -internal-light-dark(rgb(118, 118, 118), rgb(195, 195, 195));
    border-image: initial;
}
</style>
