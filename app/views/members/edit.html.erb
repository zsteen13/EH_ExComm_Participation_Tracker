<div id="main">
  <div class="header">
      <h1>Members</h1>
  </div>
  <% flash.each do |type, msg| %>
    <div style="color: red">
        <%= msg %>
      </div>
      <%flash.alert = ""%>
    <% end %>
    <%= link_to("<< Back to Member page", members_path, :class => 'back-link') %>
    <div id="outer" class="content" >
        <div id="inner" class="content">
          <div class=" new member">
            <h1 style="text-align: center;color:#500000">Edit Member Information</h1>
            <br>
            <%= form_for(@member, :url => member_path(@member), :method =>'patch') do |f| %>
              <table summary="Subject form fields">
                  <tr>
                      <th >UIN</th>
                      <td ><%= @member.uin %></td>
                  </tr>

                  <tr>
                      <th>First Name</th>
                      <td><%= f.text_field :first_name ,style: 'text-transform: capitalize;'%></td>
                  </tr>

                  <tr>
                      <th>Last Name</th>
                      <td><%= f.text_field :last_name,style: 'text-transform: capitalize;' %></td>
                  </tr>

                  <tr>
                      <th>Email</th>
                      <td><%= f.text_field :email %></td>
                  </tr>

                  <tr>
                      <th>Committee</th>
                      <td><%= f.text_field :committee %></td>
                  </tr>

                  <tr>
                      <th>Subcommittee</th>
                      <td><%= f.text_field :subcommittee %></td>
                  </tr>

                  <tr>
                      <th>Total_points</th>
                      <td><%= f.text_field :total_points %></td>
                  </tr>



                  <tr>
                      <th id="noStyle">Admin</th>
                      <% # An admin can't undo their admin status%>
                      <td id="noStyle"><%= f.check_box :admin, disabled: (@member.id == session[:user_id] ? true : nil) %></td>
                  </tr>

              </table>

              <div class="form-buttons" style="margin-top:-5px; margin-bottom:10px;">
                  <%= f.submit "Update Member", :class => 'pure-button pure-button-primary'  %>
               </div>
              <% end %>

          </div>
        </div>
    </div>

</div>

<style>
  a{
    text-decoration: none;
    color: #1b98f8;
  }
  .header a{
    color: white;
  }
  th{

    background:none;
    color:#777;
    height:20%;
    width:20%;
    padding-right:1em;
  }
  table{
    width:auto;


  }
  .table{
    border:2px solid black;

  }
  .table td a{
    background-color: #0078E7;
    color: white;
    padding:.3em;
    border-radius:10px;
    text-decoration: none;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  }
  .content {
    margin: 0 auto;
    padding: 0 2em;
    margin-bottom: 50px;
    line-height: 1.6em;
