  }
  #rbody{
    float:left;
  }


@media 
only screen and (max-width: 475px)  {

  /* Force table to not be like tables anymore */
  table, thead, tbody, th, td, tr { 
    display: block; 
  }
  
  /* Hide table headers (but not display: none;, for accessibility) */
  thead tr { 
    position: absolute;
    top: -9999px;
    left: -9999px;
  }
  .act{
    display:none;
  }
  .head{
    width:100%;
    content: "";
    display: table;
    clear: both;
    border:none;
    border-top-right-radius: 10px;
    border-top-left-radius:10px;
  }
    .lhead{
      float: left;
      width: 46%;
      text-align:center;
      
    }
    .rhead{
      float: right;
      width: 46%;
      text-align:center;
    }


  td { 
    /* Behave  like a "row" */
    border: none;
    position: relative;
    border-bottom: 3px solid #ddd;
    border-left: 1px solid #ddd;
  }
  th{
    border-left: 1px solid #ddd;
    padding-left: 10px;
  }
  tr{
    margin-bottom:15px;
  }
  #noStyle{
    border-left:none;
    border-bottom: none;
    margin-bottom:none;
  }

}

@media (max-width: 660px) {
      /* for widths less than or equal to 660 pixels */
      #outer{
        -moz-transition: width .5s ease-in-out, left .5s ease-in-out;
        -webkit-transition: width .5s ease-in-out, left .5s ease-in-out;
        -moz-transition: width .5s ease-in-out, left .5s ease-in-out;
        -o-transition: width .5s ease-in-out, left .5s ease-in-out;
        transition: width .5s ease-in-out, left .5s ease-in-out;
      }
      #inner{
        padding:0 1em;
      }
      input.pure-button{
        width:100%;
        max-width: none;
        -moz-transition: width .5s ease-in-out, left .5s ease-in-out;
        -webkit-transition: width .5s ease-in-out, left .5s ease-in-out;
        -moz-transition: width .5s ease-in-out, left .5s ease-in-out;
        -o-transition: width .5s ease-in-out, left .5s ease-in-out;
        transition: width .5s ease-in-out, left .5s ease-in-out;
      }
      .content{
        max-width:100%;
      }   
    }

@media (min-width: 665px) {
