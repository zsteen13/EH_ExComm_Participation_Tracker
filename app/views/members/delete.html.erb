<div id="main">
    <div class="header">
      <h1>Members</h1>
    </div>
    <br>
    <div style="text-align: center;" >
      <%= button_to("Return to members", members_path, :method => "get", :class => 'back-link', :class=>"pure-button pure-button-primary") %>
    </div>
    <div class="l-content">
      <div class="profile-boxes pure-g">
        <div class="pure-u-1">
          <div class="profile-box">
          <div class="member delete">
              <h2>Delete a member</h2>
              <%= form_for(@member, :url => member_path(@member), :method => 'delete') do |f| %>
                  <p> Are you sure you want to permanently delete this member from the system? </p>
                  <table class="pure-table" style="width:100%;background-color:white;" summary ="member delete information">
                    <tr class = "head">
                      <th>First Name</th>
                      <th>Last Name </th>
                      <th>UIN</th>
                      <th>Committee</th>
                      <th>Subcommittee</th>
                      <th>Email</th>
                    </tr>
                    <tr>
                        <td><%= @member.first_name %></td>
                        <td><%= @member.last_name %></td>
                        <td><%= @member.uin %></td>
                        <td id="Comm"><%= @member.display_committee %> &nbsp </td>
                        <td id="Sub"><%= @member.display_subcommittee %> &nbsp </td>
                        <td><%= @member.email %></td>
                    </tr>
                  </table>
                  <br>
                  <div class="form-buttons"> 
                    <%= f.submit 'Delete member', :class => 'pure-button', :style => 'background: rgb(240,0,0)' %>
                  </div>
               <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
    
  </div>
